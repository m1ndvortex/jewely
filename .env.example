# Django Settings
DJANGO_SECRET_KEY=your-secret-key-here-change-in-production
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
DJANGO_SETTINGS_MODULE=config.settings

# Database
POSTGRES_DB=jewelry_shop
DB_SUPERUSER=postgres
DB_SUPERUSER_PASSWORD=postgres
DB_USER=jewelry_app
APP_DB_PASSWORD=app_password_change_in_production
POSTGRES_HOST=db
POSTGRES_PORT=5432

# PgBouncer Configuration (Connection Pooling)
USE_PGBOUNCER=False
PGBOUNCER_HOST=pgbouncer
PGBOUNCER_PORT=6432

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# Celery
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Email (for development)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid-here
TWILIO_AUTH_TOKEN=your-twilio-auth-token-here
TWILIO_PHONE_NUMBER=+1234567890

# Logging
LOG_LEVEL=INFO

# Gold Rate APIs
# GoldAPI: https://www.goldapi.io/ (requires API key, paid service)
GOLDAPI_KEY=your-goldapi-key-here

# Metals-API: https://metals-api.com/ (free tier available)
METALS_API_KEY=your-metals-api-key-here

# Stripe Payment Gateway
# Get your keys from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key-here
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key-here
# Webhook secret from: https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret-here
# Set to True for production (live mode)
STRIPE_LIVE_MODE=False

# Grafana Configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# Sentry Error Tracking
# Get your DSN from: https://sentry.io/settings/[organization]/projects/[project]/keys/
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_RELEASE=
SENTRY_TRACES_SAMPLE_RATE=0.1

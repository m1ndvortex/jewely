# Production Environment Configuration
# Copy this file to .env for production deployment
# IMPORTANT: Change all placeholder values before deploying!

# Django Settings
DJANGO_SETTINGS_MODULE=config.settings.production
DJANGO_SECRET_KEY=CHANGE_THIS_TO_A_STRONG_SECRET_KEY_AT_LEAST_50_CHARS_LONG
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=jewelryshop.com,www.jewelryshop.com,api.jewelryshop.com
SITE_URL=https://jewelryshop.com

# Database Configuration
POSTGRES_DB=jewelry_shop_prod
POSTGRES_USER=jewelry_shop_user
POSTGRES_PASSWORD=CHANGE_THIS_TO_A_VERY_STRONG_PASSWORD
POSTGRES_HOST=db
POSTGRES_PORT=5432

# PgBouncer Configuration (Recommended for production)
USE_PGBOUNCER=True
PGBOUNCER_HOST=pgbouncer
PGBOUNCER_PORT=6432

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_THIS_TO_A_STRONG_PASSWORD
REDIS_USE_SENTINEL=True
REDIS_SENTINEL_MASTER_NAME=mymaster
REDIS_SENTINEL_HOSTS=redis-sentinel-0.redis-sentinel-headless.jewelry-shop.svc.cluster.local:26379,redis-sentinel-1.redis-sentinel-headless.jewelry-shop.svc.cluster.local:26379,redis-sentinel-2.redis-sentinel-headless.jewelry-shop.svc.cluster.local:26379
REDIS_SENTINEL_SOCKET_TIMEOUT=0.5

# Celery Configuration
CELERY_BROKER_URL=sentinel://:REDIS_PASSWORD@redis-sentinel.jewelry-shop.svc.cluster.local:26379/0
CELERY_RESULT_BACKEND=sentinel://:REDIS_PASSWORD@redis-sentinel.jewelry-shop.svc.cluster.local:26379/0

# Email Configuration
EMAIL_BACKEND=anymail.backends.sendgrid.EmailBackend
EMAIL_PROVIDER=sendgrid
DEFAULT_FROM_EMAIL=noreply@jewelryshop.com
SERVER_EMAIL=alerts@jewelryshop.com

# SendGrid Configuration (if using SendGrid)
SENDGRID_API_KEY=SG.CHANGE_THIS

# Mailgun Configuration (if using Mailgun)
MAILGUN_API_KEY=
MAILGUN_SENDER_DOMAIN=

# Amazon SES Configuration (if using SES)
AWS_SES_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# SMTP Configuration (if using SMTP)
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False
EMAIL_FAILOVER_ENABLED=True
EMAIL_FAILOVER_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_FAILOVER_SUPPRESS_EXCEPTIONS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=

# Logging
LOG_LEVEL=INFO

# Backup Configuration (REQUIRED)
BACKUP_ENCRYPTION_KEY=CHANGE_THIS_TO_A_STRONG_ENCRYPTION_KEY_32_BYTES
BACKUP_LOCAL_PATH=/var/backups/jewelry-shop

# Cloudflare R2 Configuration (REQUIRED)
R2_ACCOUNT_ID=b7900eeee7c415345d86ea859c9dad47
R2_BUCKET_NAME=securesyntax
R2_ACCESS_KEY_ID=CHANGE_THIS
R2_SECRET_ACCESS_KEY=CHANGE_THIS

# Backblaze B2 Configuration (REQUIRED)
B2_BUCKET_NAME=securesyntax
B2_BUCKET_ID=2a0cfb4aa9f8f8f29c820b18
B2_REGION=us-east-005
B2_ACCESS_KEY_ID=CHANGE_THIS
B2_SECRET_ACCESS_KEY=CHANGE_THIS

# API Keys (REQUIRED)
GOLDAPI_KEY=CHANGE_THIS
METALS_API_KEY=CHANGE_THIS
FIELD_ENCRYPTION_KEY=CHANGE_THIS_TO_A_STRONG_ENCRYPTION_KEY

# Twilio SMS Configuration (REQUIRED for SMS features)
TWILIO_ACCOUNT_SID=CHANGE_THIS
TWILIO_AUTH_TOKEN=CHANGE_THIS
TWILIO_PHONE_NUMBER=+1234567890

# OAuth Providers (Optional)
GOOGLE_OAUTH_CLIENT_ID=
GOOGLE_OAUTH_CLIENT_SECRET=
GITHUB_OAUTH_CLIENT_ID=
GITHUB_OAUTH_CLIENT_SECRET=
FACEBOOK_OAUTH_CLIENT_ID=
FACEBOOK_OAUTH_CLIENT_SECRET=

# Stripe Configuration (REQUIRED - Live mode)
STRIPE_SECRET_KEY=sk_live_...
STRIPE_PUBLISHABLE_KEY=pk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_LIVE_MODE=True

# Rate Limiting (REQUIRED)
RATELIMIT_ENABLE=True
RATELIMIT_DEFAULT_RATE=100/h
RATELIMIT_STRICT_RATE=10/m
RATELIMIT_LENIENT_RATE=500/h
RATELIMIT_TENANT_RATE=1000/h
RATELIMIT_USER_RATE=100/h

# Sentry Error Tracking (REQUIRED)
SENTRY_DSN=https://...@sentry.io/...
SENTRY_ENVIRONMENT=production
SENTRY_RELEASE=v1.0.0
SENTRY_TRACES_SAMPLE_RATE=0.1

# Version (for Docker image tagging)
VERSION=1.0.0
